{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "target": "es2020",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@core": ["src/lib/core"],
      "@core/*": ["src/lib/core/*"],
      "@state": ["src/lib/state"],
      "@state/*": ["src/lib/state/*"],
      "@models": ["src/lib/models"],
      "@models/*": ["src/lib/models/*"],
      "@utils": ["src/lib/utils"],
      "@stack": ["src/stack"],
      "@game": ["src/lib/game"]
    }
  },
}